    \begin{minipage}{\linewidth}%
      \small%
      \vspace{-\baselineskip}%  1行分の空き
      \noindent\textbf{Abstract}\par
      \setlength{\baselineskip}{14bp}%
      \setlength{\parindent}{1em}%
      \@abstract%
      \vspace{1.5\baselineskip}%  1.5行分の空き
    \end{minipage}}\par%
}
